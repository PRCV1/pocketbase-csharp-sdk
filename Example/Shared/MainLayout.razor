@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Example-Todo-App</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.AccountBox" Href="/login" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer Fixed="false" Class="mt-5">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<MudThemeProvider @ref="themeProvider" @bind-IsDarkMode="UseDarkmode" />
<MudDialogProvider />
<MudSnackbarProvider />